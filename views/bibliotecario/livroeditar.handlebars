<h2>-Editar Livro-</h2>

<form action="/bibliotecario/livro/editar" method="POST">
  <div class="form">
    <input type="hidden" name="id" id="id" value="{{livro.id}}">
    <div class="form-group">
      <label for="titulo">Titulo</label>
      <input type="text" class="form-control" id="titulo" name="titulo" value="{{livro.titulo}}">
    </div>
    <div class="form-group">
      <label for="autor">Autor</label>
      <input type="text" class="form-control" id="autor" name="autor" value="{{livro.autor}}">
    </div>
  </div>
  <div class="form">
    <div class="form-group">
      <label for="numero_paginas">Número de Páginas</label>
      <input type="number" class="form-control" id="numero_paginas" name="numero_paginas" value="{{livro.numero_paginas}}">
    </div>
    <div class="form-group">
      <label for="ano_lancamento">Ano de Lançamento</label>
      <input type="text" class="form-control" id="ano_lancamento" name="ano_lancamento" value="{{livro.ano_lancamento}}">
    </div>
  </div>
  <!--<br>
  <div class="custom-file">
    <input type="file" class="custom-file-input" id="imagem_livro" name="imagem_livro" lang="es">
    <label class="custom-file-label" for="customFileLang">Seleccionar Imagem</label>
  </div>!-->
  <div class="form-group">
    <label for="sinopse">Sinopse</label>
    <textarea class="form-control" name="sinopse" id="sinopse" rows="3" >{{livro.sinopse}}</textarea>
  </div>
  <div class="form-group">
    <div class="form-group">
      <label for="genero">Genero</label>
      <select id="genero" name="genero" class="form-control">
        <option>{{livro.genero}}</option>
        <option>Ficção Literária</option>
        <option>Não-Ficção</option>
        <option>Suspense</option>
        <option>Ficção Científica</option>
        <option>Fantasia</option>
        <option>Horror</option>
        <option>Poesia</option>
        <option>Romance</option>
      </select>
    </div>
  </div>
  <br>
  <button type="submit" class="btn btn-primary">Editar</button>
</form>
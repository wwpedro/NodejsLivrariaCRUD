<div class="text-center">
    <img class="d-block mx-auto mb-4" src="/imagensProjeto/livro2.png" alt="" width="200" height="200">
</div>
<br><br>
<div class="card">
    <div class="card-body">
        <h4>{{livro.titulo}}</h4><br>
        <b>Autor:</b>{{livro.autor}}<br>
        <b>Páginas:</b>{{livro.numero_paginas}}<br>
        <b>Ano de Lançamento:</b>{{livro.ano_lancamento}}<br>
        <b>Genero:</b>{{livro.genero}} <br><br>
        <small><b>Sinopse:</b>{{livro.sinopse}}</small><br>
    </div>
</div>
<br>
{{#if user}}
    <div class="card">
        <div class="card-body">
            <form action="/leitor/comentar" method="POST">
                <div class="form">
                    <div class="form-group">
                        <label for="titulo">Título</label>
                        <input type="text" class="form-control" id="titulo" name="titulo">
                    </div>
                    <div class="form-group">
                        <label for="conteudo">Comentário</label>
                        <textarea class="form-control" id="conteudo" name="conteudo" rows="3"></textarea>
                    </div>
                </div>
                <div class="form">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="leitor" name="leitor" value="{{user.id}}">{{apelido}}</input>
                        <input type="hidden" class="form-control" id="livro" name="livro" value="{{livro.id}}">{{titulo}}</input>
                    </div>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Comentar</button>
            </form>
            </div> 
    </div>
{{else}}
{{/if}}
<br>
    {{#each comentarios}}
        <div class="card">
            <div class="card-body">
                <img class="d-block mx-auto mb-4" src="/imagensProjeto/leitorIcone.png" alt="" width="50" height="50">
                <h4>Comentário:</h4><br>
                <b>Titulo: </b>{{titulo}}<br>
                <p><b>comentario: </b>{{conteudo}}</p> <br>
                <hr>
                <small>{{date}}</small>
            </div>
        </div>
        <br>
    {{else}}
    {{/each}}
<br>